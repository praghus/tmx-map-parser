{
    "name": "tmx-map-parser",
    "version": "1.3.3",
    "description": "Tiled Map Editor *.tmx files parser",
    "author": "Piotr Praga <praghus@gmail.com>",
    "homepage": "https://github.com/praghus/tmx-map-parser",
    "repository": {
        "type": "git",
        "url": "https://github.com/praghus/tmx-map-parser"
    },
    "license": "MIT",
    "keywords": [
        "typescript",
        "tmx",
        "tiled",
        "tiledmap",
        "parser"
    ],
    "main": "dist/tmx-map-parser.cjs.js",
    "module": "dist/tmx-map-parser.esm.js",
    "browser": "dist/tmx-map-parser.umd.js",
    "types": "dist/@types/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "rollup -c -w",
        "build": "rollup -c",
        "prebuild:types": "rimraf ./build",
        "build:types": "tsc -p ./tsconfig.json --outDir build --declaration true && api-extractor run",
        "predocs": "rimraf ./docs",
        "prettier:write": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
        "prettier:check": "prettier -c \"src/**/*.{js,jsx,ts,tsx}\"",
        "docs": "typedoc src --out docs",
        "docs:publish": "gh-pages -m \"[ci skip] Updates\" -d docs",
        "clean": "rimraf ./build ./dist ./docs"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@microsoft/api-extractor": "^7.18.7",
        "@rollup/plugin-commonjs": "^20.0.0",
        "@rollup/plugin-node-resolve": "^13.0.4",
        "@rollup/plugin-typescript": "^8.2.5",
        "@types/dat.gui": "^0.7.7",
        "@types/howler": "^2.2.4",
        "@types/node": "^20.14.10",
        "@types/sat": "^0.0.31",
        "@types/xml2js": "^0.4.9",
        "eslint": "^7.32.0",
        "gh-pages": "^3.2.3",
        "interface": "^1.2.1",
        "prettier": "^2.4.1",
        "rimraf": "^3.0.2",
        "rollup": "^3.29.5",
        "ts-node": "^10.2.1",
        "tslib": "^2.3.1",
        "typedoc": "^0.21.9",
        "typescript": "^4.4.2"
    },
    "dependencies": {
        "xml2js": "^0.6.2",
        "zlib": "^1.0.5"
    }
}
